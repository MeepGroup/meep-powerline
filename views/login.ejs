<!doctype html>
<html>
<head>
    <title>Meep API Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.5/css/bootstrap-material-design.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body { padding-top:80px; background-color: #e74c3c; }
        .jumbotron{
          width: 33%;
          margin-left: 33%;
        }
        input{
          width: 100%;
        }
    </style>
</head>
<body>
<div class="container">
<div class="jumbotron">

    <h1>API Login</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
      <div class="form-group">
        <label for="inputEmail" class="col-md-2 control-label">Email</label>

        <div class="col-md-10">
          <input type="email" class="form-control" name="email" placeholder="youremail@me.com">
        </div>
      </div>
      <div class="form-group">
        <label for="inputEmail" class="col-md-2 control-label">Password</label>

        <div class="col-md-10">
          <input type="password" class="form-control" name="password" placeholder="***********">
        </div>
      </div>
        <button type="submit" class="btn btn-warning btn-block btn-lg btn-raised">Login</button>
    </form>

</div>
</div>
</body>
</html>
